<div class="hero-unit">
  <%= form_tag sign_in_sessions_path do %>
    <p>
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %>
    </p>
    <p>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </p>
  <%= submit_tag "Log in", :class => "btn btn-primary" %>
  <% end %>
</div>