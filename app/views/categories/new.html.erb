<div class="hero-unit" style="margin:auto;width: 70%;">
    <h2>New category creation</h2>
    <%= form_for @category do |f| %>
        <% if @category.errors.any? %>
          <div class="error_messages">
            <h2>Form is invalid</h2>
            <ul>
              <% for message in @category.errors.full_messages %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <p>
          <%= f.label :name %>
          <%= f.text_field :name, :required => true %>
        </p>
        <p>
          <%= f.label :description %>
          <%= f.text_field :description, :required => true %>
        </p>
        <%= f.submit "create", :class => "btn btn-primary" %></p>
    <% end %>
</div>
