<div class="hero-unit" style="margin:auto;width: 70%;">
<table class="table table-bordered">
      <tr>
       <th>category name</th>
       <th>Description</th>
      </tr>
   <% if @categories.present? %>
     <% @categories.each do |category| %>
       <tr>
         <td><%= category.name %> <%= link_to 'new expense', new_category_expense_path(category) %></td>
         <td><%= category.description %></td>
       </tr>
     <% end %>
   <% end %>
</table>
</div>
