<div style="margin:auto;width: 80%;padding: 0px">
    <div style = "display: inline;padding-bottom: 20px">
        <h3 style="display: inline;padding-right: 750px">Categories</h3>  
       <%= link_to 'new category', new_category_path, :class => "btn btn-primary" %>
     </div>
     <br />
    <table class="table table-bordered">
      <tr>
       <th>Category Name</th>
       <th>Description</th>
      </tr>
     <% if @categories.present? %>
       <% @categories.each do |category| %>
           <tr>
             <td>
                 <%= category.name %> <%= link_to 'new expense', new_category_expense_path(category), :class => "popover-test", :rel => "popover", :title => nil, :"data-content" =>"Create a New Expense through this link for an existing Category" %>
                 </td>       
             <td><%= category.description %></td>
           </tr>
       <% end %>
     <% end %>
    </table>
</div>
