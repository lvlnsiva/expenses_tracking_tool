<% if current_user %>
     <div style = "margin-left:10px;display: inline;padding-bottom: 20px">
       <h2 style="display: inline;padding-right: 800px;">Expenses</h2>  
       <%= link_to 'new expense', new_expense_path, :class => "btn btn-primary" %>
     </div>
