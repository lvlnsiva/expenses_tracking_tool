       <th>cost</th>
       <th>spent on</th>
      </tr>      
         <% @expenses.each do |expense| %>
           <tr>
             <td><%= expense.item_name %></td>
             <td><%= expense.category.try(:name) %></td>
             <td><%= expense.cost %></td>
             <td><%= expense.spent_on %></td>
           </tr>           
         <% end %>
    </table>
         <%= will_paginate @expenses if @expenses %>
    </div>
         <% else %>
