<div class = "hero-unit">
 <%= form_for @expense do |f| %>
    <% if  @expense.errors.any? %>
      <div id="error_explanation" style= color:red;>
        <h2><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>
        <ul>
          <% @expense.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
        <p>
          <%= f.label :category_id %>
          <%= f.collection_select :category_id, Category.all, :id, :name, option = {:selected => @expense.category_id} %>
        </p>
        <p>
          <%= f.label :item_name %>
          <%= f.text_field :item_name, :required => true %>
        </p>
        <p>
          <%= f.label :cost %>
          <%= f.text_field :cost, :required => true %>
        </p>
        <p>
          <%= f.label :spent_on %>
         <%= f.text_field :spent_on %>
        </p>
        <p class="desc">
          <%= f.label :comments %>
          <%= f.text_area :comments, :required => true %>
        </p>
    <%= f.submit "create", :class => "btn btn-primary"%>
  <% end %>
  
</div>
 <script>
    $(function() {
        $( "#expense_spent_on" ).datepicker({
            showButtonPanel: true,
            dateFormat: "dd/mm/yy"
         });
    });
 </script>