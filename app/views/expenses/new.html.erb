<div class="hero-unit" style="margin:auto;width: 70%;">
    <h2>New Expense creation form</h2>
    <div style = "margin-left:500px">
      <%= link_to 'new', new_category_path, :class => "btn btn-primary" %>
    </div>
 <%= form_for @expense do |f| %>
    <% if  @expense.errors.any? %>
      <div id="error_explanation" style= color:red;>
        <h2><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>
        <ul>
          <% @expense.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
        <p>
          <%= f.label :category_id %>
          <%= f.collection_select :category_id, current_user.categories, :id, :name, option = {:selected => @expense.category_id} %>
        </p>
        <p>
          <%= f.label :item_name %>
          <%= f.text_field :item_name, :required => true %>
        </p>
        <p>
          <%= f.label :cost %>
          <%= f.text_field :cost, :required => true %>
        </p>
        <p>
          <%= f.label :spent_on %>
         <%= f.text_field :spent_on %>
        </p>
        <p>
          <%= f.label :comments %>
          <%= f.text_area(:comments, {:cols => 10, :rows => 5})%>
        </p>
    <%= f.submit "create", :class => "btn btn-primary"%>
  <% end %>
</div>
<script>
$(function() {
  $("#expense_spent_on").datepicker({
        showButtonPanel: true,
        dateFormat: "dd/mm/yy"
  });
});
</script>