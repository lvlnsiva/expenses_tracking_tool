<h1>Expenses creating Form</h1>
<div class = "hero-unit">   
    
  <%= form_for @todo do |f| %>
    <% if  @todo.errors.any? %>
      <div id="error_explanation" style= color:red;>
        <h2><%= pluralize(@todo.errors.count, "error") %> prohibited this Todo from being saved:</h2>
        <ul>
          <% @todo.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
        <p>
          <%= f.label :category_id %>
          <%= f.collection_select :category_id, User.all, :id, :email, {:selected => (@todo.user_id.present? ? @todo.user_id : current_user.id)} %>
        </p>
        <p>
          <%= f.label :name %>
          <%= f.text_field :name, :required => true %>
        </p>
        <p>
          <%= f.label :description %>
          <%= f.text_field :description, :required => true %>
        </p>
        <p>
          <%= f.label :target_date %>
          <%= datepicker_input :todo, :target_date, {:dateFormat => "yy/mm/dd"} %>
        </p>
        <p>
          <%= f.label :status %>
          <%= f.select :status, options_for_select(%w[Notcompleted InProgress Completed], nil), {:include_blank => true} %>
        </p>
    <%= f.submit %>
  <% end %>
  
</div>